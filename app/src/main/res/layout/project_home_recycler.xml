<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jwabBackground">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/project_home_list_recyclerView"
        android:layout_width="410dp"
        android:layout_height="680dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ladderGamePlusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="108dp"
        android:background="@drawable/button_state"
        app:layout_constraintBottom_toBottomOf="@+id/project_home_list_recyclerView"
        app:layout_constraintEnd_toEndOf="@+id/project_home_list_recyclerView"
        app:srcCompat="@drawable/plusbt_4" />

</androidx.constraintlayout.widget.ConstraintLayout>