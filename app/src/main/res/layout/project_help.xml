<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/helpTitle"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="6dp"
        android:text="도움말"
        android:textStyle="bold"
        android:textColor="@color/appMainColor"
        android:gravity="center"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="100dp"
        android:layout_height="640dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helpTitle">

        <Button
            android:id="@+id/helpIntroBt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="앱소개"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/helpSignBt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="회원가입"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/helpProjectCreBt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="프로젝트    생성"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/helpBottomBt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="하단버튼    종류"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/helpLeftBt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="최상단 왼쪽 버튼"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Button"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Button"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Button"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Button"
            android:textColor="@color/textColor"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/helpContentsView"
        android:layout_width="310dp"
        android:layout_height="560dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="16dp"
        android:letterSpacing="0.1"
        android:lineSpacingMultiplier="1.5"
        android:text=""
        android:textColor="#000000"
        android:textSize="15dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/helpSubTitle" />

    <TextView
        android:id="@+id/helpSubTitle"
        android:layout_width="310dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:text="TextView"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/helpContentsView"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/helpTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>