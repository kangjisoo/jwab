<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/projectInfoTitle"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="프로젝트 정보"
        android:textColor="@color/appMainColor"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/info_projectImg"
        android:layout_width="194dp"
        android:layout_height="287dp"
        android:layout_marginStart="74dp"
        android:layout_marginLeft="74dp"
        android:layout_marginEnd="74dp"
        android:layout_marginRight="74dp"
        android:layout_marginBottom="363dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projectInfoTitle"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/basic_people2" />

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="292dp"
        android:layout_height="41dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_projectImg">

        <TextView
            android:id="@+id/info_project_name"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:text="이름:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_set_name"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:text="프로젝트이름"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="292dp"
        android:layout_height="41dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_projectImg">

        <TextView
            android:id="@+id/info_project_pw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="비밀번호:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_set_pw"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="프로젝트비밀번호"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="293dp"
        android:layout_height="45dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <TextView
            android:id="@+id/info_project_date"
            android:layout_width="17dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="생성날짜:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_set_date"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="생성날짜"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="283dp"
        android:layout_height="53dp"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="46dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <TextView
            android:id="@+id/info_project_expire_date"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="기간:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_set_exprie_date"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:text="기간"
            android:textSize="18dp" />
    </LinearLayout>

    <Button
        android:id="@+id/info_img_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="27dp"
        android:textColor="@color/textColor"
        android:text="사진바꾸기"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout9"
        app:layout_constraintEnd_toEndOf="@+id/info_projectImg"
        app:layout_constraintStart_toStartOf="@+id/info_projectImg"
        app:layout_constraintTop_toBottomOf="@+id/info_projectImg"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>