<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ladderGameTitle"
        android:layout_width="148dp"
        android:layout_height="64dp"
        android:layout_marginTop="164dp"
        android:gravity="center"
        android:text="사다리타기"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ladderGameTextView1"
        android:layout_width="47dp"
        android:layout_height="25dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="276dp"
        android:gravity="center"
        android:text="제목"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ladderGameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:ems="10"
        android:hint="제목입력"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ladderGameTextView1"
        app:layout_constraintTop_toBottomOf="@+id/ladderGameTitle" />

    <Button
        android:id="@+id/ladderGameCheckBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="232dp"
        android:text="확인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ladderGameMemberTitle"
        android:layout_width="47dp"
        android:layout_height="25dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:gravity="center"
        android:text="인원"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ladderGameTextView1"
        app:layout_constraintVertical_bias="0.128" />

    <ImageButton
        android:id="@+id/ladderGameMinusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintBottom_toTopOf="@+id/ladderGameCheckBt"
        app:layout_constraintStart_toEndOf="@+id/ladderGameMemberTitle"
        app:layout_constraintTop_toBottomOf="@+id/ladderGameEditText"
        app:layout_constraintVertical_bias="0.262"
        app:srcCompat="@drawable/minus" />

    <TextView
        android:id="@+id/ladderGameMember"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text="0"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/ladderGameCheckBt"
        app:layout_constraintStart_toEndOf="@+id/ladderGameMinusButton"
        app:layout_constraintTop_toBottomOf="@+id/ladderGameEditText"
        app:layout_constraintVertical_bias="0.303" />

    <ImageButton
        android:id="@+id/ladderGamePlusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toTopOf="@+id/ladderGameCheckBt"
        app:layout_constraintStart_toEndOf="@+id/ladderGameMember"
        app:layout_constraintTop_toBottomOf="@+id/ladderGameEditText"
        app:layout_constraintVertical_bias="0.262"
        app:srcCompat="@drawable/plus" />

</androidx.constraintlayout.widget.ConstraintLayout>